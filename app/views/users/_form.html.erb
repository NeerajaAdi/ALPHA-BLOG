<div id="page-content">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <%= render 'shared/errors', obj: @user %>
        <%= form_with(model: @user, class: "shadow p-3 mb-5 bg-info rounded", local: true) do |f| %>
          <div class="form-group-row">
            <%= f.label :username, class: "col-sm-2 col-form-label text-light"%>
            <div class="col-sm-10">
              <%= f.text_field :username, class: "form-control shawdow rounded", placeholder: "Enter a Username" %>
            </div>
          </div>
            
          <div class="form-group-row">
            <%= f.label :email,  class: "col-sm-2 col-form-label text-light" %>
            <div class="col-sm-10">
              <%= f.email_field :email,  class: "form-control shawdow rounded", placeholder: "Enter email address" %>
            </div>
          </div>
          <div class="form-group-row">
            <%= f.label :password, class: "col-sm-2 col-form-label text-light"%>
            <div class="col-sm-10">
              <%= f.text_field :password, class: "form-control shawdow rounded", placeholder: "Choose password" %>
            </div>
          </div>

          <div class="form-group row justify-content-center">
            <%= f.submit(@user.new_record? ? "Signup" : "Update account", class: "btn btn-outline-light btn-lg") %>
          </div>
        <% end %>
      </div>
      <div class="mb-3">
        <%= link_to '[Cancel and return to articles]', articles_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>